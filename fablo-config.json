{
  "$schema": "https://github.com/hyperledger-labs/fablo/releases/download/2.2.0/schema.json",
  "global": {
    "fabricVersion": "2.5.7",
    "tls": false,
    "engine": "docker",
    "peerDevMode": true,
    "tools": {
      "explorer": true
    }
  },
  "orgs": [
    {
      "organization": {
        "name": "Org1",
        "domain": "org1.example.com",
        "mspName": "Org1MSP"
      },
      "peer": {
        "instances": 1,
        "db": "LevelDb"
      },
      "orderers": [
        {
          "groupName": "group1",
          "type": "solo",
          "instances": 1
        }
      ],
      "tools": {
        "fabloRest": true
      }
    }
  ],
  "channels": [
    {
      "name": "channel1",
      "orgs": [
        {
          "name": "Org1",
          "peers": ["peer0"]
        }
      ],
      "ordererGroup": "group1"
    }
  ],
  "chaincodes": [
    {
      "name": "kv-js",
      "version": "0.1.0",
      "lang": "node",
      "channel": "channel1",
      "directory": "./chaincodes/kv-js"
    },
    {
      "name": "asset-transfer-ts",
      "version": "0.1.0",
      "lang": "node",
      "channel": "channel1",
      "directory": "./chaincodes/asset-transfer-ts"
    }
  ]
}
